{
  "name": "reversi-web",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "probcut-datagen": "./probcut-cli.js"
  },
  "scripts": {
    "build:wasm": "wasm-pack build --target web --out-dir dist/pkg --release",
    "build:wasm:dev": "wasm-pack build --target web --out-dir dist/pkg --dev",
    "build:wasm:node": "wasm-pack build --target nodejs --out-dir pkg-node --release",
    "dev": "npm run build:wasm:dev && vite",
    "bench": "npm run build:wasm && cross-env BENCHMARK=true vite --open /benchmark.html",
    "build": "npm run build:wasm && vite build",
    "build:bench": "npm run build:wasm && cross-env BENCHMARK=true vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "vite": "^7.3.1",
    "vite-plugin-wasm": "^3.3.0",
    "vite-plugin-top-level-await": "^1.4.4"
  },
  "dependencies": {
    "petite-vue": "^0.4.1"
  }
}